<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity.FutureVisionActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Vision_ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/future_vision_image"
            android:layout_width="@dimen/list_item_future_vision_photo_width"
            android:layout_height="@dimen/list_item_future_vision_photo_height"
            android:layout_marginRight="420dp"
            android:elevation="5dp"
            android:scaleType="centerCrop"
            app:civ_border_color="#d3000000"
            app:civ_border_width="0.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/future_vision" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/vision_recycler"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/future_vision_image">

        </android.support.v7.widget.RecyclerView>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/empty_textView_vision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.volley.zeon.widget.ProgressWheelFolder.ProgressWheel
        android:id="@+id/progress_wheel_vision"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        wheel:matProg_barColor="#dbb138"
        wheel:matProg_progressIndeterminate="true" />

</android.support.constraint.ConstraintLayout>