<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuActivity.FutureVisionActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/future_vision_image"
        android:layout_width="@dimen/list_item_future_vision_photo_width"
        android:layout_height="@dimen/list_item_future_vision_photo_height"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/future_vision"
        app:civ_border_color="#d3000000"
        app:civ_border_width="0.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/vision_recycler"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/future_vision_image">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>