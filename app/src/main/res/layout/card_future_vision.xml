<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/future_vision_image"
        android:layout_width="@dimen/list_item_future_vision_photo_width"
        android:layout_height="@dimen/list_item_future_vision_photo_hight"
        android:layout_marginRight="16dp"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/future_vision"
        app:civ_border_color="#FFFFFFFF"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/summary_project_future_vision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="  "
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/summaryMember" />

</LinearLayout>