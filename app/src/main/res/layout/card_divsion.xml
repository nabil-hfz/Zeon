<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="344dp"
    android:layout_height="382dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_background"
        android:elevation="1dp"
        card_view:cardCornerRadius="@dimen/card_member_radius">

        <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_members"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:gravity="start|bottom"
                android:paddingLeft="@dimen/left_padding"
                android:text="Mahmmod Trrooooooo "
                android:textColor="@color/nameMember"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/majority_member"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="top|start"
                android:paddingLeft="@dimen/left_padding"
                android:text="Web stack developer and Xeon's boss "
                android:textColor="@color/majorityMember"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@id/name_members" />

            <ImageView
                android:id="@+id/member_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hight_image_member"
                android:layout_marginTop="@dimen/left_padding"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/zeon_boss"
                app:layout_constraintTop_toBottomOf="@id/majority_member" />

            <TextView
                android:id="@+id/summary_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/Top_padding_summary"
                android:ellipsize="end"
                android:gravity="start|bottom"
                android:maxLines="2"
                android:paddingLeft="@dimen/left_padding"
                android:paddingRight="4dp"
                android:text="Mahmmod is very nice creative boss . he love his assistance in the Zeon team speacially nabel  "
                android:textColor="@color/summaryMember"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/member_photo" />

            <Button
                android:id="@+id/button_see_more"
                android:layout_width="@dimen/width_Button_seeMore"
                android:layout_height="@dimen/height_Button_seeMore"
                android:layout_marginTop="18dp"
                android:text="SEE More"
                android:textAllCaps="true"
                android:textColor="@color/button_see_more"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@id/summary_member"
                app:layout_constraintLeft_toLeftOf="@id/summary_member"
                app:layout_constraintRight_toRightOf="@id/summary_member"
                app:layout_constraintStart_toStartOf="@id/summary_member"
                app:layout_constraintTop_toBottomOf="@id/summary_member" />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>